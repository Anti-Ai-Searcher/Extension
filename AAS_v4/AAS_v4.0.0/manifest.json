{
  "name": "Anti-AI-Searcher",
  "version": "4.0.0",
  "manifest_version": 3,
  "description": "Google 검색 결과/이미지를 AI로 분석하고, 카드/사이드바에 AI 확률을 표시합니다.",
  "permissions": ["storage", "scripting", "activeTab","sidePanel"],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search*",
        "https://www.google.co.kr/search*",
        "https://search.naver.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "statics/img/AAS_icon-16.png",
    "32": "statics/img/AAS_icon-32.png",
    "48": "statics/img/AAS_icon-48.png",
    "128": "statics/img/AAS_icon-128.png"
  },
  "options_ui" : {
    "page": "templates/options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "action": {
    "default_icon": {
      "16": "statics/img/AAS-logo-16.png",
      "32": "statics/img/AAS-logo-32.png",
      "48": "statics/img/AAS-logo-48.png",
      "128": "statics/img/AAS-logo-128.png"
    },
    "default_title": "Anti-AI-Searcher"
  },
  "side_panel": {
    "default_path": "templates/sidepanel.html"
  }
}